<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTint"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/screenMargin"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/shipment_info"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:hint="Shipping Information"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/fontLarge" />
        <EditText
            android:id="@+id/userFirstName"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:paddingTop="@dimen/topPadding"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/fontSize"
            android:fontFamily="@font/alata"
            android:hint="Enter First Name" />

        <EditText
            android:id="@+id/userLastName"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:textColor="@color/primaryTextColor"
            android:paddingTop="@dimen/topPadding"
            android:textSize="@dimen/fontSize"
            android:fontFamily="@font/alata"
            android:hint="Enter Last Name" />
        <EditText
            android:id="@+id/userAddress"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:hint="Enter Address Line"
            android:paddingTop="@dimen/topPadding"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="@font/alata"
            android:textSize="@dimen/fontSize" />

        <EditText
            android:id="@+id/userCity"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:hint="Enter City"
            android:paddingTop="@dimen/topPadding"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="@font/alata"
            android:textSize="@dimen/fontSize" />
        <EditText
            android:id="@+id/userState"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:hint="Enter State"
            android:paddingTop="@dimen/topPadding"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="@font/alata"
            android:textSize="@dimen/fontSize" />
        <EditText
            android:id="@+id/userZIP"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:hint="Enter ZIP CODE"
            android:paddingTop="@dimen/topPadding"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="@font/alata"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:onClick="switchScreens"
            android:text="CONTINUE" />


    </LinearLayout>
</ScrollView>