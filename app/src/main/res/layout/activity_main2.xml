<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTint"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/screenMargin"
        android:gravity="center_horizontal"
        >


        <TextView
            android:id="@+id/shipment_info"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="wrap_content"
            android:hint="Payment Information"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/fontLarge" />


        <EditText
            android:id="@+id/userLastName"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:textColor="@color/primaryTextColor"
            android:paddingTop="@dimen/topPadding"
            android:textSize="@dimen/fontSize"
            android:hint="Enter Full Name" />
        <EditText
            android:id="@+id/cardNumber"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:hint="Enter Credit/Debit Card Number"
            android:paddingTop="@dimen/topPadding"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/fontSize" />

        <EditText
            android:id="@+id/userCVC"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:hint="Enter CVC"
            android:paddingTop="@dimen/topPadding"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/fontSize" />
        <EditText
            android:id="@+id/userZIP"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:hint="Enter ZIP CODE"
            android:paddingTop="@dimen/topPadding"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="switchScreens"
            android:text="CONTINUE" />


    </LinearLayout>
</ScrollView>
